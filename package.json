    "date-fns": "^3.6.0"
  },
  "exports": {
    ".": "./dist/index.js",
    "./hooks": "./dist/hooks/index.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "typescript": "^5.3.0",
