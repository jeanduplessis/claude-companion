  },
  "exports": {
    ".": "./dist/index.js",
    "./hooks": "./dist/hooks/index.js"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.4",
    "typescript": "^5.9.3",
    "tsx": "^4.20.6"
